@model EmployeeDirectory.Auth.Models.RegisterViewModel
<style>
    .register-page{
        background-color: white;
        border-radius: 8px;
        border:1px solid #ccc;
    }
</style>
<div class="register-page p-4">
    <div class="page-header">
        <h2 class="text-center">Register</h2>
    </div>

    <partial name="_ValidationSummary" />
    <form asp-route="Register">
        <div class="form-floating mb-3">
            <label asp-for="UserName"></label>
            <input type="text" class="form-control" placeholder="Enter User Name" asp-for="UserName" autofocus required>
        </div>
        <div class="form-floating mb-3">
            <label asp-for="Email"></label>
            <input type="email" class="form-control" placeholder="Enter your email address" asp-for="Email" autofocus required>
        </div>
        <div class="form-floating mb-3">
            <label asp-for="Password"></label>
            <input type="password" class="form-control" placeholder="Enter a password" asp-for="Password" autocomplete="off">
        </div>
        <div class="form-floating mb-3">
            <label asp-for="ConfirmPassword"></label>
            <input type="password" class="form-control" placeholder="Confirm your password" asp-for="ConfirmPassword" autocomplete="off">
        </div>
        <button class="btn btn-primary col-12 my-2" name="button" value="register">Register</button>
    </form>
    <p class="text-center text-secondary py-2">Already Registered? <a href="Login" class="text-decoration-none">Login</a></p>
</div>